    SUBROUTINE FH.V.VAL.INT.MIN.RATE
    $INSERT I_COMMON
    $INSERT I_EQUATE
    $INSERT I_F.LD.LOANS.AND.DEPOSITS
    $INSERT I_F.PERIODIC.INTEREST


! Run only for first time and in cross val only.
    IF R.OLD(LD.CURR.NO) EQ '' THEN

        INT.RATE.TYPE = R.NEW(LD.INT.RATE.TYPE)
! This val is only for PERIODIC AUTOMATIC so check for that
        IF INT.RATE.TYPE NE '2' THEN RETURN
        LD.CCY =  R.NEW(LD.CURRENCY)
        INT.KEY = R.NEW(LD.INTEREST.KEY)
        INT.SPREAD = R.NEW(LD.INTEREST.SPREAD)
        MIN.CONT.RATE = COMI
        IF (INT.KEY NE '') AND (MIN.CONT.RATE GT '0.00') THEN
            GOSUB GET.PI.RATE
            TOT.RATE = PI.INT.RATE+INT.SPREAD
            IF TOT.RATE LT MIN.CONT.RATE THEN
                FIX.INT.RATE = MIN.CONT.RATE-INT.SPREAD
            END ELSE
                FIX.INT.RATE = PI.INT.RATE
            END
            R.NEW(LD.INTEREST.RATE) = FIX.INT.RATE
            CALL REBUILD.SCREEN
        END

    END
    RETURN
GET.PI.RATE:

    FN.PERIODIC.INTEREST = 'F.PERIODIC.INTEREST' ; F.PERIODIC.INTEREST = ''
    CALL OPF(FN.PERIODIC.INTEREST,F.PERIODIC.INTEREST)
    PI.KEY =  INT.KEY:LD.CCY:TODAY
    CALL F.READ(FN.PERIODIC.INTEREST,PI.KEY,R.PERIODIC.INTEREST,F.PERIODIC.INTEREST,PI.ERR)
    PI.INT.RATE = R.PERIODIC.INTEREST<PI.OFFER.RATE,1,1>
    RETURN
END
