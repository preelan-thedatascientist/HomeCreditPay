    SUBROUTINE FH.V.VAL.COL.NO.YEARS
    $INSERT I_COMMON
    $INSERT I_EQUATE
    $INSERT I_F.COLLATERAL

    CALL GET.LOC.REF(APPLICATION,'LOAN.CONT.DATE',CPOS)
    CALL GET.LOC.REF(APPLICATION,'LEASE.EXP.DATE',XPOS)
    CALL GET.LOC.REF(APPLICATION,'LEASE.NO.YEARS',YPOS)
    CALL GET.LOC.REF(APPLICATION,'COL.OWN.TYPE',POS)

    EXP.DATE = COMI
    CONTRACT.DATE = R.NEW(COLL.LOCAL.REF)<1,CPOS>
    DAYS = 'C'
    CALL CDD('',CONTRACT.DATE,EXP.DATE,DAYS)
    IF DAYS LT 365 THEN
        R.NEW(COLL.LOCAL.REF)<1,YPOS> = DAYS
    END ELSE
        R.NEW(COLL.LOCAL.REF)<1,YPOS> = DROUND((DAYS / 365),1)
    END
    CALL REBUILD.SCREEN
    RETURN
END
